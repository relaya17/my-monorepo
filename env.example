# ========================================
# הגדרות סביבה - פרויקט ניהול דיירים
# ========================================

# ========================================
# הגדרות בסיסיות
# ========================================
NODE_ENV=development
PORT=3008
HOST=localhost

# ========================================
# מסד נתונים
# ========================================
MONGO_URI=mongodb://localhost:27017/payments_db
MONGO_URI_PROD=mongodb://your-production-mongo-uri
MONGO_DB_NAME=payments_db
MONGO_USER=your_mongo_user
MONGO_PASS=your_mongo_password

# ========================================
# אבטחה - JWT
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# אבטחה - Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=3
PAYMENT_RATE_LIMIT_WINDOW_MS=60000

# ========================================
# CORS - Cross-Origin Resource Sharing
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175
ALLOWED_ORIGINS_PROD=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# Cloudinary - אחסון תמונות
# ========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# תשלומים
# ========================================
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret
PAYMENT_CURRENCY=ILS
PAYMENT_MIN_AMOUNT=10
PAYMENT_MAX_AMOUNT=10000

# ========================================
# לוגים וניטור
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/server.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_MS=1000
MEMORY_THRESHOLD_MB=500

# ========================================
# אימייל
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# ========================================
# SMS (אופציונלי)
# ========================================
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+972500000000

# ========================================
# AI וניתוח
# ========================================
AI_ENABLED=true
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-3.5-turbo
ANALYTICS_ENABLED=true

# ========================================
# גיבויים
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ========================================
# SSL/HTTPS (לפרודקשן)
# ========================================
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=./ssl/ca_bundle.crt

# ========================================
# Redis (אופציונלי - לקאש)
# ========================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# הגדרות נוספות
# ========================================
UPLOAD_MAX_SIZE=10485760
SESSION_SECRET=your-session-secret-key
COMPRESSION_ENABLED=true
HELMET_ENABLED=true
CORS_ENABLED=true

# ========================================
# משתנים לבדיקה
# ========================================
# שנה את כל הסיסמות והמפתחות למערכת שלך!
# אל תשתמש בערכים ברירת מחדל בפרודקשן!

# ========================================
# הוראות שימוש:
# ========================================
# 1. העתק קובץ זה ל-.env
# 2. שנה את כל הערכים לערכים שלך
# 3. אל תעלה את קובץ .env לגיט
# 4. ודא שכל הסיסמות חזקות
# 5. בדוק את הגדרות האבטחה 